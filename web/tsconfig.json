{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "strict": true,
    "types": ["vite/client", "@types/jest"],
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./jest-setup.ts",
    "../app/src/preload.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
